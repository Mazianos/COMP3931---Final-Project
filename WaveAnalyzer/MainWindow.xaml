<Window x:Class="WaveAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="root">
        <TextBlock Name="textBlock" FontSize="24" HorizontalAlignment="Center" Text="Nothing is open right now"  TextWrapping="Wrap" VerticalAlignment="Center"/>
        <Button Name="fourierButton" Click="fourierHandler" FontSize="20" IsEnabled="False" Content="Fourier Me" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center"/>
        <Menu VerticalAlignment="Top" Height="18">
            <MenuItem Header="File">
                <MenuItem Name="fileOpen" Header="Open" Click="fileOpenHandler"/>
                <MenuItem Name="fileSave" Header="Save" Click="fileSaveHandler"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
